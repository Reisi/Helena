define gendfupackage
	@$(NRFUTIL) dfu genpkg --application $1.hex \
	                       --dev-type 0x8724 \
	                       --dev-revision 0x0200 \
	                       --sd-req 0x0080,0x0087 \
	                       $1.zip
endef
